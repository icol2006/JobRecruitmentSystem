@model AppJobRecruitmentSystem.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar Password";
}

<style>
    body {
        background-color:#f2f2f2;
        background-position: center center;
        justify-content: center;
        align-items: center;
    }

    .container {
        background: #ffffff;
        margin-top: 40px;
        border: 2px solid #5f9cd8;
        height: auto;
        box-sizing: border-box;
        position: relative;
    }

    .col.s6 > .btn {
        width: 100%;
    }

    .gender-male, .gender-female {
        display: inline-block;
    }

    .gender-female {
        margin-left: 35px;
    }

    radio:required {
        border-color: red;
    }

    .container {
        animation: showUp 0.5s cubic-bezier(0.18, 1.3, 1, 1) forwards;
    }


    .row {
        margin-bottom: 10px;
    }

    .ngl {
        position: absolute;
        top: -20px;
        right: -20px;
    }

    .btn {
        text-decoration: none;
        color: #fff;
        background-color: #5f9cd8;
        text-align: center;
        letter-spacing: .5px;
        -webkit-transition: .2s ease-out;
        -moz-transition: .2s ease-out;
        -o-transition: .2s ease-out;
        transition: .2s ease-out;
        cursor: pointer;
    }
</style>


<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-12 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control col-md-6" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-12 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control col-md-6" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-12 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-6" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Cambiar password" class="btn btn-default" />
                </div>
            </div>
        </div>

     </div>

            }
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
