@model AppJobRecruitmentSystem.Models.ChangeEmailViewModel
@{
    ViewBag.Title = "Cambiar Email";
}

<link href="~/Content/personaldata.css" rel="stylesheet" />

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeEmail", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                @Html.LabelFor(m => m.OldEmail, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.EditorFor(m => m.OldEmail, new { htmlAttributes = new { @class = "form-control col-md-6", @readonly = "readonly" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewEmail, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.EditorFor(m => m.NewEmail, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmEmail, new { @class = "col-md-12 control-label" })
                <div class="col-md-12">
                    @Html.EditorFor(m => m.ConfirmEmail, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Actualizar" class="btn btn-default" />
                </div>
            </div>


        </div>

    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
